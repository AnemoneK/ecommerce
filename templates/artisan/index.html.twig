{% extends 'base.html.twig' %}

{% block title %}Artisan index{% endblock %}

{% block body %}
    <h1>Artisan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Address</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artisan in artisans %}
            <tr>
                <td>{{ artisan.id }}</td>
                <td>{{ artisan.firstName }}</td>
                <td>{{ artisan.lastName }}</td>
                <td>{{ artisan.address }}</td>
                <td>{{ artisan.city }}</td>
                <td>
                    <a href="{{ path('artisan_show', {'id': artisan.id}) }}">show</a>
                    <a href="{{ path('artisan_edit', {'id': artisan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artisan_new') }}">Create new</a>
{% endblock %}
